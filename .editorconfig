root = true

[*.cs]
# Usar cuatro espacios para indentación
indent_style = space
indent_size = 4

# Poner espacios antes de llaves
csharp_space_before_open_brace = all

# Estilo de nombres: PascalCase para tipos, camelCase para variables
dotnet_naming_rule.types_should_be_pascal_case.symbols    = all_types
dotnet_naming_rule.types_should_be_pascal_case.style      = pascal_case_style
dotnet_naming_symbols.all_types.applicable_kinds          = class, struct, interface, enum, delegate
dotnet_naming_style.pascal_case_style.capitalization      = pascal_case

dotnet_naming_rule.locals_should_be_camel_case.symbols    = all_locals
dotnet_naming_rule.locals_should_be_camel_case.style      = camel_case_style
dotnet_naming_symbols.all_locals.applicable_kinds          = local
dotnet_naming_style.camel_case_style.capitalization        = camel_case

# Evitar líneas muy largas
max_line_length = 120

